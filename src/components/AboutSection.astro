  </div>
  
  <!-- Decorative Line -->
  <div class="container-custom mt-8 sm:mt-12 lg:mt-16 px-4 sm:px-6 lg:px-0">
    <div class="h-px bg-brand-gold/30 w-full"></div>
  </div>
</section>

<!-- About Mobile Slider JavaScript -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const aboutSlider = document.getElementById('mobile-about-slider');
    if (!aboutSlider) return;
    
    const slides = aboutSlider.querySelectorAll('.slider-item');
    const dots = aboutSlider.querySelectorAll('.about-slider-dot');
    let currentSlide = 0;
    const totalSlides = slides.length;
    
    function updateAboutSlider() {
      slides.forEach((slide, index) => {
        (slide as HTMLElement).style.transform = `translateX(${(index - currentSlide) * 100}%)`;
      });
      
      dots.forEach((dot, index) => {
        if (index === currentSlide) {
          dot.classList.add('bg-white');
          dot.classList.remove('bg-white/50');
        } else {
          dot.classList.add('bg-white/50');
          dot.classList.remove('bg-white');
        }
      });
    }
    
    // Dot navigation
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentSlide = index;
        updateAboutSlider();
      });
    });
    
    // Auto-rotate disabled for manual control
    // setInterval(() => {
    //   currentSlide = (currentSlide + 1) % totalSlides;
    //   updateAboutSlider();
    // }, 5000);
    
    // Touch/Swipe support
    let startX = 0;
    let endX = 0;
    
    aboutSlider.addEventListener('touchstart', (e) => {
      startX = e.changedTouches[0].screenX;
    });
    
    aboutSlider.addEventListener('touchend', (e) => {
      endX = e.changedTouches[0].screenX;
      const swipeThreshold = 50;
      const swipeDistance = startX - endX;
      
      if (Math.abs(swipeDistance) > swipeThreshold) {
        if (swipeDistance > 0) {
          // Swiped left - next slide
          currentSlide = (currentSlide + 1) % totalSlides;
        } else {
          // Swiped right - previous slide
          currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
        }
        updateAboutSlider();
      }
    });
    
    // Initialize
    updateAboutSlider();
  });
</script>