<section id="about" class="pt-4 sm:pt-8 lg:pt-24 pb-16 lg:pb-24 bg-brand-dark">
  <div class="container-custom">
    <!-- Mobil Layout -->
    <div class="lg:hidden px-4 sm:px-6">
