      align-items: center;
      transform: translateY(0%) !important;
      padding: 0 1rem;
    }
    
    .hero-left-figma {
      width: 100%;
      height: 250px;
      max-width: 400px;
      order: 1;
    }
    
    .hero-right-figma {
      width: 100%;
      height: 280px;
      max-width: 400px;
      position: static;
      order: 2;
      border-radius: 20px;
    }
    
    .hero-right-figma img {
      border-radius: 20px;
      clip-path: none;
    }
    
    .hero-content-figma {
      position: static;
      width: 100%;
