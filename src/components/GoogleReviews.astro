          dot.classList.remove('bg-brand-gold/30');
        } else {
          dot.classList.remove('bg-brand-gold');
          dot.classList.add('bg-brand-gold/30');
        }
      });
    }
    
    // Dot click handlers
    reviewDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentReview = index;
        updateReviewSlider();
      });
    });
    
    // Touch/Swipe support
    let touchStartX = 0;
    let touchEndX = 0;
    
    if (reviewsSlider) {
      reviewsSlider.addEventListener('touchstart', (e) => {
        const touchEvent = e as TouchEvent;
        touchStartX = touchEvent.changedTouches[0].screenX;
      });
      
      reviewsSlider.addEventListener('touchend', (e) => {
        const touchEvent = e as TouchEvent;
        touchEndX = touchEvent.changedTouches[0].screenX;
        handleReviewSwipe();
      });
    }
    
    function handleReviewSwipe() {
      const swipeThreshold = 50;
      const swipeDistance = touchStartX - touchEndX;
      
      if (Math.abs(swipeDistance) > swipeThreshold) {
        if (swipeDistance > 0) {
          // Swipe left - next review
          currentReview = (currentReview + 1) % totalReviews;
        } else {
          // Swipe right - previous review  
          currentReview = currentReview > 0 ? currentReview - 1 : totalReviews - 1;
        }
        updateReviewSlider();
      }
    }
    
    // Auto-rotate reviews (slower)
    setInterval(() => {
      if (window.innerWidth < 1024) { // Only on mobile
        currentReview = (currentReview + 1) % totalReviews;
        updateReviewSlider();
      }
    }, 5000);
    
    // Initialize
    populateMobileSlider();
    updateReviewSlider();
  });
</script>
