<script>
  // Gallery filtering and infinite scroll functionality
  document.addEventListener('DOMContentLoaded', function() {
    const categoryButtons = document.querySelectorAll('.gallery-category-btn') as NodeListOf<HTMLButtonElement>;
    const galleryItems = document.querySelectorAll('.gallery-item') as NodeListOf<HTMLElement>;
    const loadingIndicator = document.getElementById('loading-indicator') as HTMLElement;
    const scrollTrigger = document.getElementById('scroll-trigger') as HTMLElement;
    
    let currentFilter = 'all';
    let itemsToShow = 12; // Initial load: 12 images
    const itemsPerLoad = 6; // Load 6 more each time (smoother)
    let isLoading = false;
    let allItemsLoaded = false;
    
    // Clean up hover content and apply category badges
    galleryItems.forEach(item => {
      const category = item.getAttribute('data-category');
      
      // Remove all hover content (gradients and text overlays)
      const gradientOverlays = item.querySelectorAll('.absolute.inset-0');
      const textOverlays = item.querySelectorAll('.absolute.bottom-4, .absolute.bottom-6');
      
      gradientOverlays.forEach(overlay => {
        if (overlay.classList.contains('bg-gradient-to-t')) {
          overlay.remove();
        }
      });
      
      textOverlays.forEach(overlay => {
        if (overlay.querySelector('h3') || overlay.querySelector('p')) {
          overlay.remove();
        }
      });
      
      // Ensure category badges exist for all items
      let badgeContainer = item.querySelector('.absolute.top-3.left-3');
      
      if (!badgeContainer) {
        // Create badge container if missing
        badgeContainer = document.createElement('div');
        badgeContainer.className = 'absolute top-3 left-3';
        
        const badge = document.createElement('span');
        badge.className = 'bg-brand-gold/90 text-brand-dark px-2 py-1 rounded-full text-xs font-josefin font-medium';
        
        if (category === 'food') {
          badge.textContent = 'Food & Drinks';
        } else if (category === 'events') {
          badge.textContent = 'Events & Occasions';
        } else if (category === 'interior') {
          badge.textContent = 'Interior & Outdoor';
        }
        
        badgeContainer.appendChild(badge);
        item.querySelector('.relative')?.appendChild(badgeContainer);
      } else {
        // Update existing badge text
        const badge = badgeContainer.querySelector('span');
        if (badge) {
          if (category === 'food') {
            badge.textContent = 'Food & Drinks';
          } else if (category === 'events') {
            badge.textContent = 'Events & Occasions';
          } else if (category === 'interior') {
            badge.textContent = 'Interior & Outdoor';
          }
        }
      }
    });
    
    // Get filtered items based on current filter
    function getFilteredItems() {
      return Array.from(galleryItems).filter(item => {
        const itemCategory = item.getAttribute('data-category');
        return currentFilter === 'all' || itemCategory === currentFilter;
      });
    }
    
    // Update gallery display
    function updateGalleryDisplay(animate = true) {
      const filteredItems = getFilteredItems();
      
      // Hide all items first
      galleryItems.forEach(item => {
        item.style.display = 'none';
      });
      
      // Show filtered items up to current limit
      filteredItems.forEach((item, index) => {
        if (index < itemsToShow) {
          item.style.display = '';
          if (animate) {
            item.style.opacity = '0';
            setTimeout(() => {
              item.style.opacity = '1';
            }, index * 30); // Faster staggered animation
          } else {
            item.style.opacity = '1';
          }
        } else {
          item.style.display = 'none';
        }
      });
      
      // Update allItemsLoaded status
      allItemsLoaded = filteredItems.length <= itemsToShow;
      
      // Show/hide scroll trigger
      if (allItemsLoaded) {
        scrollTrigger.style.display = 'none';
      } else {
        scrollTrigger.style.display = 'block';
      }
    }
    
    // Load more items
    function loadMoreItems() {
      if (isLoading || allItemsLoaded) return;
      
      isLoading = true;
      loadingIndicator.classList.remove('hidden');
      
      // Simulate loading delay for better UX
      setTimeout(() => {
        const filteredItems = getFilteredItems();
        const newItemsToShow = Math.min(itemsToShow + itemsPerLoad, filteredItems.length);
        
        // Show new items with animation
        for (let i = itemsToShow; i < newItemsToShow; i++) {
          if (filteredItems[i]) {
            filteredItems[i].style.display = '';
            filteredItems[i].style.opacity = '0';
            setTimeout(() => {
              filteredItems[i].style.opacity = '1';
            }, (i - itemsToShow) * 100);
          }
        }
        
        itemsToShow = newItemsToShow;
        allItemsLoaded = filteredItems.length <= itemsToShow;
        
        // Hide loading indicator
        loadingIndicator.classList.add('hidden');
        isLoading = false;
        
        // Hide scroll trigger if all items loaded
        if (allItemsLoaded) {
          scrollTrigger.style.display = 'none';
        }
      }, 600); // 600ms loading simulation
    }
    
    // Intersection Observer for infinite scroll
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && !isLoading && !allItemsLoaded) {
          loadMoreItems();
        }
      });
    }, {
      rootMargin: '100px' // Start loading 100px before scroll trigger is visible
    });
    
    // Initial load
    updateGalleryDisplay();
    
    // Start observing scroll trigger
    if (scrollTrigger) {
      observer.observe(scrollTrigger);
    }
    
    // Category filtering
    categoryButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = button.getAttribute('data-category');
        currentFilter = category || 'all';
        itemsToShow = 12; // Reset to initial load
        isLoading = false;
        allItemsLoaded = false;
        
        // Hide loading indicator
        loadingIndicator.classList.add('hidden');
        
        // Update active button
        categoryButtons.forEach(btn => {
          btn.classList.remove('active');
          btn.style.backgroundColor = '';
          btn.style.borderColor = '';
          btn.style.color = '';
          btn.classList.add('border-brand-gold/50', 'text-white');
        });
        
        button.classList.add('active');
        button.style.backgroundColor = '#C49A85';
        button.style.borderColor = '#C49A85';
        button.style.color = '#0A1114';
        button.classList.remove('border-brand-gold/50', 'text-white');
        
        updateGalleryDisplay();
        
        // Re-enable scroll trigger
        scrollTrigger.style.display = 'block';
      });
    });
    
    // Lightbox functionality
    const lightbox = document.getElementById('lightbox') as HTMLElement;
    const lightboxContent = document.getElementById('lightbox-content') as HTMLElement;
    const lightboxImage = document.getElementById('lightbox-image') as HTMLImageElement;
    const lightboxBadge = document.getElementById('lightbox-badge') as HTMLElement;
    const lightboxClose = document.getElementById('lightbox-close') as HTMLButtonElement;
    const lightboxPrev = document.getElementById('lightbox-prev') as HTMLButtonElement;
    const lightboxNext = document.getElementById('lightbox-next') as HTMLButtonElement;
    
    let currentImageIndex = 0;
    let currentImages: HTMLImageElement[] = [];
    
    // Get currently visible images for navigation
    function getCurrentImages() {
      const visibleItems = Array.from(galleryItems).filter(item => 
        item.style.display !== 'none' && 
        item.style.opacity !== '0'
      );
      return visibleItems.map(item => item.querySelector('img')).filter(img => img) as HTMLImageElement[];
    }
    
    // Open lightbox
    function openLightbox(img: HTMLImageElement, index: number) {
      currentImages = getCurrentImages();
      currentImageIndex = index;
      
      const category = img.closest('.gallery-item')?.getAttribute('data-category');
      const categoryText = category === 'food' ? 'Food & Drinks' : 
                          category === 'events' ? 'Events & Occasions' : 
                          category === 'interior' ? 'Interior & Outdoor' : '';
      
      lightboxImage.src = img.src;
      lightboxImage.alt = img.alt;
      lightboxBadge.textContent = categoryText;
      
      lightbox.classList.remove('hidden');
      lightbox.classList.add('flex');
      document.body.style.overflow = 'hidden'; // Prevent background scroll
    }
    
    // Close lightbox
    function closeLightbox() {
      lightbox.classList.add('hidden');
      lightbox.classList.remove('flex');
      document.body.style.overflow = ''; // Restore scroll
    }
    
    // Navigate to previous image
    function prevImage() {
      if (currentImages.length > 1) {
        currentImageIndex = (currentImageIndex - 1 + currentImages.length) % currentImages.length;
        const img = currentImages[currentImageIndex];
        openLightbox(img, currentImageIndex);
      }
    }
    
    // Navigate to next image
    function nextImage() {
      if (currentImages.length > 1) {
        currentImageIndex = (currentImageIndex + 1) % currentImages.length;
        const img = currentImages[currentImageIndex];
        openLightbox(img, currentImageIndex);
      }
    }
    
    // Image click functionality
    const galleryImages = document.querySelectorAll('.gallery-item img') as NodeListOf<HTMLImageElement>;
    galleryImages.forEach((img) => {
      img.addEventListener('click', function() {
        const visibleImages = getCurrentImages();
        const imgIndex = visibleImages.indexOf(this);
        if (imgIndex !== -1) {
          openLightbox(this, imgIndex);
        }
      });
      
      // Add cursor pointer style
      img.style.cursor = 'pointer';
    });
    
    // Lightbox event listeners
    lightboxClose?.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      closeLightbox();
    });
    
    lightboxPrev?.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      prevImage();
    });
    
    lightboxNext?.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      nextImage();
    });
    
    // Simple approach: any click on lightbox background closes it
    lightbox?.addEventListener('click', (e) => {
      // Only close if clicking directly on the lightbox (background)
      // Don't close if clicking on content, buttons, or their children
      const isContentClick = lightboxContent?.contains(e.target as Node);
      const isCloseButton = lightboxClose?.contains(e.target as Node);
      const isPrevButton = lightboxPrev?.contains(e.target as Node);
      const isNextButton = lightboxNext?.contains(e.target as Node);
      
      if (!isContentClick && !isCloseButton && !isPrevButton && !isNextButton) {
        closeLightbox();
      }
    });
    
    // Touch events for mobile
    lightbox?.addEventListener('touchend', (e) => {
      const isContentTouch = lightboxContent?.contains(e.target as Node);
      const isCloseButton = lightboxClose?.contains(e.target as Node);
      const isPrevButton = lightboxPrev?.contains(e.target as Node);
      const isNextButton = lightboxNext?.contains(e.target as Node);
      
      if (!isContentTouch && !isCloseButton && !isPrevButton && !isNextButton) {
        e.preventDefault();
        closeLightbox();
      }
    });
    
    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (!lightbox.classList.contains('hidden')) {
        switch (e.key) {
          case 'Escape':
            closeLightbox();
            break;
          case 'ArrowLeft':
            prevImage();
            break;
          case 'ArrowRight':
            nextImage();
            break;
        }
      }
    });
  });
</script>

