    font-style: italic;
    color: #0E1B1F;
    position: relative;
    margin: 2rem 0;
  }
  
  .prose blockquote::before {
    content: '"';
    position: absolute;
    top: -10px;
    left: 20px;
    font-size: 4rem;
    color: #D4A574;
    font-family: serif;
    line-height: 1;
  }
  
  .prose code {
    background: #f8f9fa;
    color: #D4A574;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    border: 1px solid rgba(212, 165, 116, 0.2);
  }
  
  .prose pre {
    background: #f8f9fa;
    border: 1px solid rgba(212, 165, 116, 0.2);
    border-radius: 12px;
    padding: 1.5rem;
  }
  
  .prose ul, .prose ol {
    margin: 1.5rem 0;
  }
  
  .prose li {
    margin: 0.5rem 0;
    position: relative;
  }
  
  .prose ul > li::marker {
    color: #D4A574;
  }
  
  .prose ol > li::marker {
    color: #D4A574;
    font-weight: bold;
  }
  
  .prose p {
    margin: 1.5rem 0;
    line-height: 1.8;
  }
  
  .prose strong {
    color: #0E1B1F;
    font-weight: 600;
  }
  
  .prose a {
    color: #D4A574;
    text-decoration: none;
    font-weight: 600;
    border-bottom: 2px solid transparent;
    transition: border-color 0.3s ease;
  }
  
  .prose a:hover {
    border-bottom-color: #D4A574;
  }
  
  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .prose {
      font-size: 1rem;
    }
    
    .prose h1 {
      font-size: 2.5rem;
    }
    
    .prose h2 {
      font-size: 2rem;
    }
    
    .prose h3 {
      font-size: 1.5rem;
    }
  }
  
  /* Smooth scroll for anchor links */
  html {
    scroll-behavior: smooth;
  }
  
  /* Custom scrollbar for sidebar */
  .sidebar-scroll::-webkit-scrollbar {
    width: 4px;
  }
  
  .sidebar-scroll::-webkit-scrollbar-track {
    background: rgba(212, 165, 116, 0.1);
    border-radius: 2px;
  }
  
  .sidebar-scroll::-webkit-scrollbar-thumb {
    background: #D4A574;
    border-radius: 2px;
  }
</style>
