---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  heroImage?: string;
  tags?: string[];
  author?: string;
}

const { title, description, pubDate, heroImage, tags = [], author = 'TheSolo Kitchen & Bar' } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-GB', {
  day: 'numeric',
  month: 'long', 
  year: 'numeric'
});
---

<BaseLayout 
  title={`${title} | TheSolo Kitchen & Bar Blog`}
  description={description}
  image={heroImage}
>
  <Header />
  
  <main class="min-h-screen bg-brand-dark">
    
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center bg-brand-dark overflow-hidden">
      <!-- Hero Background Image -->
      <div class="absolute inset-0 z-0">
        <img 
          src={heroImage || "/images/restaurant-2.jpg"}
          alt={title}
          class="w-full h-full object-cover"
          loading="eager"
          onerror="this.src='/images/restaurant-2.jpg'"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-brand-dark via-brand-dark/80 to-brand-dark/40"></div>
      </div>
      
      <!-- Hero Content -->
      <div class="relative z-10 container-custom text-center py-20 mt-20">
        <div class="max-w-5xl mx-auto">
          <!-- Tags -->
          {tags.length > 0 && (
            <div class="flex flex-wrap gap-3 justify-center mb-8">
              {tags.map(tag => (
                <span class="inline-block bg-brand-gold text-brand-dark px-4 py-2 rounded-full text-sm font-josefin font-semibold uppercase tracking-wider">
                  {tag}
                </span>
              ))}
            </div>
          )}
          
          <!-- Title -->
          <h1 class="font-crimson text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl text-white mb-8 leading-tight">
            {title}
          </h1>
          
          <!-- Description -->
          <p class="font-josefin text-xl sm:text-2xl text-white/90 max-w-4xl mx-auto leading-relaxed mb-12">
            {description}
          </p>
          
          <!-- Meta info -->
          <div class="flex flex-col sm:flex-row items-center justify-center gap-6 text-white/80">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-brand-gold rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-brand-dark" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
              </div>
              <div class="text-left">
                <p class="font-josefin text-sm text-white/60 uppercase tracking-wider">Written by</p>
                <p class="font-crimson text-lg text-white font-medium">{author}</p>
              </div>
            </div>
            
            <div class="hidden sm:block w-px h-12 bg-white/30"></div>
            
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-brand-gold/20 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-brand-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="text-left">
                <p class="font-josefin text-sm text-white/60 uppercase tracking-wider">Published</p>
                <time class="font-crimson text-lg text-white font-medium">{formattedDate}</time>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
        <div class="flex flex-col items-center gap-2 text-white/60 animate-bounce">
          <span class="font-josefin text-sm uppercase tracking-wider">Scroll to read</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </div>
      </div>
    </section>

    <!-- Article Content -->
    <article class="py-20 lg:py-32 bg-brand-dark relative">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0 bg-gradient-to-br from-brand-gold/5 to-transparent"></div>
      </div>
      
      <div class="container-custom relative">
        <div class="max-w-5xl mx-auto">
          
          <!-- Article Header -->
          <div class="text-center mb-16 lg:mb-20">
            <div class="w-24 h-1 bg-brand-gold mx-auto mb-8"></div>
            <p class="font-josefin text-lg text-white/80 max-w-3xl mx-auto leading-relaxed">
              Dive deep into our Mediterranean world and discover the stories, traditions, and passion that make TheSolo Kitchen & Bar special.
            </p>
          </div>
          
          <!-- Article Body -->
          <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16">
            
            <!-- Main Content -->
            <div class="lg:col-span-8">
              <div class="bg-white rounded-3xl shadow-2xl overflow-hidden">
                
                <!-- Featured Image -->
                {heroImage && (
                  <div class="w-full">
                    <img 
                      src={heroImage}
                      alt={title}
                      class="w-full h-80 lg:h-96 object-cover"
                      loading="eager"
                      onerror="this.style.display='none'"
                    />
                  </div>
                )}
                
                <!-- Content Area -->
                <div class="p-8 lg:p-16">
                  <div class="blog-content max-w-none">
                    <slot />
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Sidebar -->
            <div class="lg:col-span-4">
              <div class="sticky top-8 space-y-8">
                
                <!-- Author Info -->
                <div class="bg-brand-dark-card rounded-2xl p-6 border border-brand-gold/20">
                  <div class="text-center">
                    <div class="w-20 h-20 bg-brand-gold rounded-full flex items-center justify-center mx-auto mb-4">
                      <svg class="w-10 h-10 text-brand-dark" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                      </svg>
                    </div>
                    <h3 class="font-crimson text-xl text-white mb-2">{author}</h3>
                    <p class="font-josefin text-white/70 text-sm mb-4">
                      {author.includes('Chef') ? 'Head Chef & Culinary Director' : 'Editorial Team'}
                    </p>
                    <p class="font-josefin text-white/60 text-sm leading-relaxed">
                      Passionate about Mediterranean cuisine and committed to sharing authentic flavors and culinary traditions.
                    </p>
                  </div>
                </div>
                
                <!-- Article Info -->
                <div class="bg-brand-dark-card rounded-2xl p-6 border border-brand-gold/20">
                  <h3 class="font-crimson text-lg text-white mb-4">Article Details</h3>
                  <div class="space-y-3">
                    <div class="flex items-center gap-3 text-white/80">
                      <svg class="w-5 h-5 text-brand-gold flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                      <span class="font-josefin text-sm">{formattedDate}</span>
                    </div>
                    <div class="flex items-center gap-3 text-white/80">
                      <svg class="w-5 h-5 text-brand-gold flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span class="font-josefin text-sm">5 min read</span>
                    </div>
                    {tags.length > 0 && (
                      <div class="pt-2 border-t border-brand-gold/20">
                        <p class="font-josefin text-sm text-white/60 mb-2">Tags:</p>
                        <div class="flex flex-wrap gap-2">
                          {tags.map(tag => (
                            <span class="inline-block bg-brand-gold/20 text-brand-gold px-2 py-1 rounded text-xs font-josefin">
                              {tag}
                            </span>
                          ))}
                        </div>
                      </div>
                    )}
                  </div>
                </div>
                
                <!-- Share Article -->
                <div class="bg-brand-dark-card rounded-2xl p-6 border border-brand-gold/20">
                  <h3 class="font-crimson text-lg text-white mb-4">Share Article</h3>
                  <div class="flex gap-3">
                    <!-- Facebook -->
                    <button 
                      class="w-10 h-10 bg-brand-gold/20 hover:bg-brand-gold text-brand-gold hover:text-brand-dark rounded-full flex items-center justify-center transition-colors duration-300" 
                      title="Share on Facebook"
                      onclick="shareOnFacebook()"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    </button>
                    
                    <!-- X (Twitter) -->
                    <button 
                      class="w-10 h-10 bg-brand-gold/20 hover:bg-brand-gold text-brand-gold hover:text-brand-dark rounded-full flex items-center justify-center transition-colors duration-300" 
                      title="Share on X"
                      onclick="shareOnTwitter()"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                      </svg>
                    </button>
                    
                    <!-- LinkedIn -->
                    <button 
                      class="w-10 h-10 bg-brand-gold/20 hover:bg-brand-gold text-brand-gold hover:text-brand-dark rounded-full flex items-center justify-center transition-colors duration-300" 
                      title="Share on LinkedIn"
                      onclick="shareOnLinkedIn()"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    </button>
                  </div>
                </div>
                
                <!-- Related Articles -->
                <div class="bg-brand-dark-card rounded-2xl p-6 border border-brand-gold/20">
                  <h3 class="font-crimson text-lg text-white mb-4">Related Articles</h3>
                  <div class="space-y-4">
                    <a href="/blog" class="block group">
                      <h4 class="font-josefin text-white/80 group-hover:text-brand-gold transition-colors duration-300 text-sm leading-tight">
                        Discover more Mediterranean culinary stories
                      </h4>
                      <p class="font-josefin text-white/60 text-xs mt-1">View all articles →</p>
                    </a>
                  </div>
                </div>
                
              </div>
            </div>
            
          </div>
          
          <!-- Navigation -->
          <div class="mt-20 pt-12 border-t border-brand-gold/30">
            <div class="flex flex-col sm:flex-row items-center justify-between gap-8">
              <a 
                href="/blog" 
                class="inline-flex items-center gap-3 bg-brand-dark-card hover:bg-brand-gold text-white hover:text-brand-dark px-6 py-3 rounded-full transition-all duration-300 font-josefin font-medium"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Back to All Articles
              </a>
              
              <div class="flex items-center gap-4">
                <a 
                  href="/contact" 
                  class="inline-flex items-center gap-2 text-brand-gold hover:text-white transition-colors duration-300 font-josefin"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                  Contact Us
                </a>
                <a 
                  href="/menu" 
                  class="inline-flex items-center gap-2 bg-brand-gold hover:bg-brand-gold/90 text-brand-dark px-6 py-3 rounded-full transition-all duration-300 font-josefin font-medium"
                >
                  View Our Menu
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </article>

  </main>
  
  <Footer />
</BaseLayout>

<script>
  // Social media sharing functions
  function shareOnFacebook() {
    const url = encodeURIComponent(window.location.href);
    const title = encodeURIComponent(document.title);
    const shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}&t=${title}`;
    window.open(shareUrl, '_blank', 'width=600,height=400,scrollbars=yes,resizable=yes');
  }
  
  function shareOnTwitter() {
    const url = encodeURIComponent(window.location.href);
    const title = encodeURIComponent(document.title);
    const text = encodeURIComponent(`${document.title} - TheSolo Kitchen & Bar`);
    const shareUrl = `https://twitter.com/intent/tweet?url=${url}&text=${text}&via=thesolo_london`;
    window.open(shareUrl, '_blank', 'width=600,height=400,scrollbars=yes,resizable=yes');
  }
  
  function shareOnLinkedIn() {
    const url = encodeURIComponent(window.location.href);
    const title = encodeURIComponent(document.title);
    const summary = encodeURIComponent(document.querySelector('meta[name="description"]')?.getAttribute('content') || '');
    const shareUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${url}&title=${title}&summary=${summary}`;
    window.open(shareUrl, '_blank', 'width=600,height=400,scrollbars=yes,resizable=yes');
  }
  
  // Make functions globally available
  (window as any).shareOnFacebook = shareOnFacebook;
  (window as any).shareOnTwitter = shareOnTwitter;
  (window as any).shareOnLinkedIn = shareOnLinkedIn;
</script>

<style>
  /* Clean and readable blog content styling */
  .blog-content {
    font-family: 'Josefin Sans', sans-serif;
    line-height: 1.7;
    color: #4B5563;
    font-size: 1.1rem;
  }
  
  .blog-content h1 {
    font-family: 'Crimson Text', serif;
    font-size: 3rem;
    font-weight: 700;
    color: #0E1B1F;
    margin: 0 0 2rem 0;
    line-height: 1.2;
  }
  
  .blog-content h2 {
    font-family: 'Crimson Text', serif;
    font-size: 2.25rem;
    font-weight: 700;
    color: #D4A574;
    margin: 3rem 0 1.5rem 0;
    line-height: 1.3;
    border-bottom: 2px solid #D4A574;
    padding-bottom: 0.5rem;
  }
  
  .blog-content h3 {
    font-family: 'Crimson Text', serif;
    font-size: 1.75rem;
    font-weight: 600;
    color: #0E1B1F;
    margin: 2.5rem 0 1rem 0;
    line-height: 1.4;
  }
  
  .blog-content h4 {
    font-family: 'Crimson Text', serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #D4A574;
    margin: 2rem 0 1rem 0;
    line-height: 1.4;
  }
  
  .blog-content p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin: 2rem 0;
    color: #4B5563;
  }
  
  .blog-content p:first-child {
    font-size: 1.25rem;
    font-weight: 500;
    color: #374151;
    margin-top: 0;
  }
  
  .blog-content strong {
    font-weight: 700;
    color: #0E1B1F;
  }
  
  .blog-content a {
    color: #D4A574;
    font-weight: 600;
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 2px;
    transition: all 0.3s ease;
  }
  
  .blog-content a:hover {
    color: #0E1B1F;
    text-decoration-color: #0E1B1F;
  }
  
  .blog-content ul, .blog-content ol {
    margin: 2rem 0;
    padding-left: 2rem;
  }
  
  .blog-content li {
    margin: 1rem 0;
    font-size: 1.1rem;
    line-height: 1.7;
    color: #4B5563;
  }
  
  .blog-content ul li {
    list-style-type: disc;
    list-style-color: #D4A574;
  }
  
  .blog-content ol li {
    list-style-type: decimal;
    list-style-color: #D4A574;
  }
  
  .blog-content blockquote {
    border-left: 5px solid #D4A574;
    background: #F9FAFB;
    padding: 2rem;
    margin: 3rem 0;
    border-radius: 8px;
    font-style: italic;
    font-size: 1.2rem;
    color: #374151;
  }
  
  .blog-content code {
    background: #F3F4F6;
    color: #D4A574;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.95rem;
    font-weight: 600;
  }
  
  .blog-content pre {
    background: #F9FAFB;
    border: 1px solid #E5E7EB;
    border-radius: 8px;
    padding: 1.5rem;
    margin: 2rem 0;
    overflow-x: auto;
    font-size: 0.95rem;
  }

  /* Professional blog layout styles */
  .prose h2 {
    color: #D4A574;
    border-bottom: 3px solid #D4A574;
    padding-bottom: 0.75rem;
    margin-top: 3rem;
    position: relative;
  }
  
  .prose h2::before {
    content: '';
    position: absolute;
    left: 0;
    bottom: -3px;
    width: 60px;
    height: 3px;
    background: #D4A574;
  }
  
  .prose h3 {
    color: #0E1B1F;
    position: relative;
    padding-left: 20px;
  }
  
  .prose h3::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 24px;
    background: #D4A574;
    border-radius: 2px;
  }
  
  .prose blockquote {
    border-left: 4px solid #D4A574;
    background: linear-gradient(135deg, rgba(212, 165, 116, 0.1), rgba(212, 165, 116, 0.05));
